<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/progressBar"
            app:layout_constraintStart_toStartOf="@+id/textView" app:layout_constraintEnd_toStartOf="@+id/buttonReset"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/buttonReset"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="@+id/buttonReset"/>
    <TextView
            android:text="@string/progressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewProgress"
            app:layout_constraintBottom_toBottomOf="@+id/progressBar"
            app:layout_constraintTop_toTopOf="@+id/progressBar" app:layout_constraintEnd_toEndOf="@+id/progressBar"
            app:layout_constraintStart_toStartOf="@+id/progressBar"/>
    <TextView
            android:layout_width="0dp"
            android:text="Hello World!"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.483" android:id="@+id/textView"
            android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonA" android:layout_height="0dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/buttonReset"/>
    <Button
            android:text="@string/answer_a"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:id="@+id/buttonA" app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonB"/>
    <Button
            android:text="@string/answer_b"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:id="@+id/buttonB" app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/buttonC"/>
    <Button
            android:text="@string/answer_c"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:id="@+id/buttonC" app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/buttonNext"/>
    <Button
            android:text="@string/next"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:id="@+id/buttonNext" app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="10dp" app:layout_constraintBottom_toBottomOf="parent"
    />
    <Button
            android:text="x"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:id="@+id/buttonReset"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            android:layout_marginTop="10dp" app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>